algoritmo "problemaBaskaraV001"
//
//
var

coeficienteA, coeficienteB, coeficienteC, calculoDiscriminante, calculoX1, calculoX2: Real

inicio

escreva("Coeficiente a: ")
leia(coeficienteA)

escreva("Coeficiente b: ")
leia(coeficienteB)

escreva("Coeficiente c: ")
leia(coeficienteC)

calculoDiscriminante <- Exp(coeficienteB, 2) - (4 * coeficienteA * coeficienteC)

se calculoDiscriminante < 0 entao
   escreval("Esta equação não possui raizes reais")

senao

   calculoX1 <- ((-coeficienteB) + (RaizQ(calculoDiscriminante))) / (2 * coeficienteA)

   calculoX2 <- ((-coeficienteB) - (RaizQ(calculoDiscriminante))) / (2 * coeficienteA)

   escreval("X1 = ",calculoX1:1:4)
   escreval("X2 = ",calculoX2:1:4)
   
fimse

fimalgoritmo
