algoritmo "valorOperadoraV001"
var

quantidadeMinutos: inteiro
valorPagar, valorPlano: real

inicio
valorPlano <- 50.00
escreva("Digite a quantidade de minutos: ")
leia(quantidadeMinutos)

se quantidadeMinutos > 100 entao
   valorPagar <- ((quantidadeMinutos - 100) * 2) + valorPlano
   escreva("Valor a pagar: R$ ", valorPagar:1:2)
   
   senao
        escreva("Valor a pagar: R$ ", valorPlano:1:2)

fimse
fimalgoritmo
