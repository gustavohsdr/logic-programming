algoritmo "problemaTemperaturaV001"
var

valorEscala: caractere
valorTemperatura, conversaoTemperatura: real
inicio
escreva ("VocÃª vai digitar a temperatura em qual escala (C/F)? ")
leia(valorEscala)

se (valorEscala = "C") ou (valorEscala ="c") entao
   escreva("Digite a temperatura em Celsius: ")
   leia(valorTemperatura)

   conversaoTemperatura <-(valorTemperatura * 1.8) + 32)

   escreva("Temperatura equivalente em Fahrenheit: ", conversaoTemperatura:1:2)


   senao
   escreva("Digite a temperatura em Fahrenheit: ")
   leia(valorTemperatura)

   conversaoTemperatura <-(valorTemperatura - 32) / 1.8)

   escreva("Temperatura equivalente em Celsius: ", conversaoTemperatura:1:2)

fimse

fimalgoritmo
